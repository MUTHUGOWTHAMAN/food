<%- include('partials/header') %>

<div class="container mt-5">

  <!-- Page Heading -->
  <div class="text-center mb-5">
    <i class="fas fa-user fa-6x text-primary"></i>
    <h1 class="display-4 mt-3">Customer Dashboard</h1>
    <p class="text-secondary">Manage your products, orders, and history</p>
    <hr class="my-4">
  </div>

  <!-- Button Section -->
  <div class="row g-4 justify-content-center">

    <!-- Product Details -->
    <div class="col-lg-4 col-md-6">
      <div class="card shadow-sm border-0 text-center h-100">
        <div class="card-body">
          <i class="fas fa-box fa-4x text-info mb-3"></i>
          <h4 class="card-title">Product Details</h4>
          <p class="card-text">View all available products and details.</p>
          <a href="/products" class="btn btn-outline-info btn-lg w-100">View Products</a>
        </div>
      </div>
    </div>

    <!-- Order -->
    <div class="col-lg-4 col-md-6">
      <div class="card shadow-sm border-0 text-center h-100">
        <div class="card-body">
          <i class="fas fa-shopping-cart fa-4x text-success mb-3"></i>
          <h4 class="card-title">Order</h4>
          <p class="card-text">Place a new order with ease.</p>
          <a href="/order" class="btn btn-outline-success btn-lg w-100">Place Order</a>
        </div>
      </div>
    </div>

    <!-- History -->
    <div class="col-lg-4 col-md-6">
      <div class="card shadow-sm border-0 text-center h-100">
        <div class="card-body">
          <i class="fas fa-history fa-4x text-warning mb-3"></i>
          <h4 class="card-title">History</h4>
          <p class="card-text">Check your order and payment history.</p>
          <a href="/getCustomer" class="btn btn-outline-warning btn-lg w-100">View History</a>
        </div>
      </div>
    </div>

  </div>

</div>

<%- include('partials/footer') %>

<style>

/* General Styling */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #f0f0f0, #e0f7fa);
  color: #333;
  margin: 0;
  padding: 0;
  min-height: 100vh;
}

/* Container Styling */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 30px;
}

/* Card Styling */
.card {
  border-radius: 12px;
  transition: transform 0.3s, box-shadow 0.3s;
}

.card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
}

.card-title {
  font-size: 1.8rem;
  color: #007bff;
}

.card-text {
  font-size: 1rem;
  color: #555;
}

/* Button Styling */
.btn-lg {
  font-size: 1.1rem;
  padding: 12px 30px;
  transition: all 0.3s;
  border-radius: 8px;
}

.btn-outline-info:hover {
  background: #17a2b8;
  color: #fff;
  transform: scale(1.05);
}

.btn-outline-success:hover {
  background: #28a745;
  color: #fff;
  transform: scale(1.05);
}

.btn-outline-warning:hover {
  background: #ffc107;
  color: #fff;
  transform: scale(1.05);
}

/* Icon Styling */
.fas {
  transition: color 0.3s;
}

/* Hover effect for icons */
.card:hover .fas {
  color: #007bff;
  transform: rotate(15deg);
}

/* Responsive Design */
@media (max-width: 768px) {
  .container {
    padding: 20px;
  }

  h1 {
    font-size: 2rem;
  }

  .btn-lg {
    font-size: 1rem;
    padding: 10px 25px;
  }

  .card {
    margin-bottom: 20px;
  }
}

</style>
  