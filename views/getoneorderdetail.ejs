<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Details</title>
    <style>
        /* Page Styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
        }

        h1 {
            text-align: center;
            color: #444;
            margin: 30px 0;
            font-size: 28px;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 15px 20px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
        }

        td {
            font-size: 14px;
            color: #555;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        p {
            text-align: center;
            color: #888;
            font-size: 18px;
        }

        a {
            display: inline-block;
            margin: 20px auto;
            text-align: center;
            text-decoration: none;
            color: #fff;
            background: #4CAF50;
            padding: 10px 25px;
            border-radius: 5px;
            font-size: 16px;
            transition: background 0.3s;
        }

        a:hover {
            background: #45a049;
        }

        /* Responsive Styling */
        @media (max-width: 768px) {
            table {
                width: 95%;
            }

            th, td {
                padding: 10px;
                font-size: 14px;
            }

            h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>

<h1>Order No: <%= orderNo %></h1>

<% if (orders.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>Order No</th>
                <th>Customer Phone No</th>
                <th>Product Category</th>
                <th>Product Name</th>
                <th>Date</th>
                <th>Food Amount</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(function(order) { %>
                <% if (orderNo == order.orderNo) { %>
                    <tr>
                        <td><%= order.orderNo %></td>
                        <td><%= order.customerPhNo %></td>
                        <td><%= order.productCategory %></td>
                        <td><%= order.productName %></td>
                        <td><%= new Date(order.date).toLocaleDateString() %></td> 
                        <td>$<%= order.foodamount.toFixed(2) %></td>
                    </tr>
                <% } %>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No orders found.</p>
<% } %>

<a href="/">Go Back</a>

</body>
</html>
