<%- include('partials/header') %>

<div class="container mt-5" style="max-width: 600px; margin: 0 auto;">

  <div class="text-center mb-4">
    <h1 class="display-4">Admin Registration</h1>
    <p class="lead text-secondary">Create a new admin account</p>
  </div>

  <div class="card shadow-lg">
    <div class="card-body">

      <!-- Admin Registration Form -->
      <form action="/admin/register" method="POST">

        <!-- Admin Name -->
        <div class="form-group">
          <label for="adminName"><i class="fas fa-user"></i> Admin Name</label>
          <input type="text" id="adminName" class="form-control" name="adminName" placeholder="Enter Name" required>
        </div>

        <!-- Email -->
        <div class="form-group mt-3">
          <label for="email"><i class="fas fa-envelope"></i> Email</label>
          <input type="email" id="email" class="form-control" name="email" placeholder="Enter Email" required>
        </div>

        <!-- Password -->
        <div class="form-group mt-3">
          <label for="password"><i class="fas fa-lock"></i> Password</label>
          <input type="password" id="password" class="form-control" name="password" placeholder="Enter Password" required>
        </div>

        <!-- Confirm Password -->
        <div class="form-group mt-3">
          <label for="confirmPassword"><i class="fas fa-lock"></i> Confirm Password</label>
          <input type="password" id="confirmPassword" class="form-control" name="confirmPassword" placeholder="Confirm Password" required>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-user-plus"></i> Register
          </button>
        </div>

      </form>

    </div>
  </div>

</div>

<%- include('partials/footer') %>
