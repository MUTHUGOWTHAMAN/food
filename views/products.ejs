<head>
  <link rel="stylesheet" href="css/styles.css"> 
  <style>

    /* General Styling */
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      background: linear-gradient(135deg, #f0f0f0, #dbeafe);
      color: #333;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    /* Main Container */
    .container {
      max-width: 1200px;
      margin: 30px auto;
      padding: 30px;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s;
    }

    .container:hover {
      transform: translateY(-10px);
    }

    /* Heading Styling */
    h1 {
      font-size: 2.5rem;
      color: #4dabf7;
      text-align: center;
      margin-bottom: 30px;
    }

    /* Table Styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 1.1rem;
      text-align: left;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 15px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background: #007bff;
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 0.05rem;
    }

    tr:nth-child(even) {
      background: #f2f2f2;
    }

    tr:hover {
      background: #d1e7ff;
      transition: 0.3s;
    }

    /* No Data Found Styling */
    p {
      font-size: 1.2rem;
      color: #ff5e57;
      text-align: center;
      margin-top: 20px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 20px;
      }

      h1 {
        font-size: 2rem;
      }

      table, th, td {
        font-size: 0.9rem;
      }
    }

    @media (max-width: 576px) {
      table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }

      th, td {
        padding: 10px;
      }

      h1 {
        font-size: 1.8rem;
      }
    }

  </style>
</head>

<!-- Main Container -->
<div class="container">

  <h1>All Products Detail</h1>

  <% if (productdata.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Category</th>
          <th>Name</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% productdata.forEach(function(product) { %>
          <tr>
            <td><%= product.productId %></td>
            <td><%= product.productCategory %></td>
            <td><%= product.productName %></td>
            <td>$<%= product.foodamount %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No data found.</p>
  <% } %>

</div>
