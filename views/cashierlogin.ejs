<%- include('partials/header') %>

<div class="container login-container">
  <div class="text-center">
    <i class="fas fa-sign-in-alt fa-8x login-icon"></i>

    <h1 class="display-4 mt-4">Cashier Login</h1>
    <p class="lead">Access your account securely</p>
    <hr class="my-4">
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-lg login-card">
        <div class="card-body">

          <!-- Login Form -->
          <form action="/cashierlogin" method="POST">
            
            <div class="form-group">
              <label for="email"><i class="fas fa-envelope"></i> Email</label>
              <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
            </div>

            <div class="form-group">
              <label for="password"><i class="fas fa-lock"></i> Password</label>
              <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
            </div>

            <div class="text-center">
              <button type="submit" class="btn-custom btn-login">
                <i class="fas fa-sign-in-alt"></i> Login
              </button>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<!-- New Styles -->
<style>
  /* Container Styling */
  .login-container {
    background: linear-gradient(135deg, #f0f0f0, #dbeafe);
    border-radius: 15px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    padding: 60px 30px;
    max-width: 1000px;
    margin: 60px auto;
    transition: all 0.3s ease-in-out;
  }

  .login-container:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  /* Icon Styling */
  .login-icon {
    color: #007bff;
    transition: transform 0.3s ease-in-out;
  }

  .login-icon:hover {
    transform: scale(1.1);
  }

  /* Header Styling */
  h1 {
    font-size: 3rem;
    color: #333;
    font-weight: bold;
  }

  p.lead {
    color: #666;
    font-size: 1.3rem;
  }

  hr {
    border: 0;
    height: 2px;
    background: linear-gradient(to right, #007bff, #00c6ff);
    width: 60%;
    margin: 30px auto;
  }

  /* Card Styling */
  .login-card {
    border-radius: 15px;
    transition: all 0.3s ease-in-out;
    padding: 40px;
  }

  .login-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 35px rgba(0, 0, 0, 0.15);
  }

  /* Form Styling */
  .form-group label {
    font-weight: bold;
    color: #444;
  }

  .form-control {
    border: 2px solid #ccc;
    border-radius: 8px;
    transition: all 0.3s;
    padding: 12px;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 10px #007bff;
  }

  /* Button Styling */
  .btn-custom {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 15px 30px;
    font-size: 18px;
    font-weight: bold;
    color: #fff;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    width: 100%;
  }

  .btn-login {
    background: linear-gradient(135deg, #dc3545, #ff6b6b);
  }

  .btn-custom:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  }

  .btn-login:hover {
    background: #ff6b6b;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .login-container {
      padding: 40px 20px;
    }

    h1 {
      font-size: 2.5rem;
    }

    .btn-custom {
      padding: 12px 20px;
      font-size: 16px;
    }
  }
</style>
