<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Customer Details</title>
    <style>
        /* Page Styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
        }

        h1 {
            text-align: center;
            font-size: 36px;
            color: #444;
            margin: 40px 0;
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            background: #fff;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            padding: 40px;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .container:hover {
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }

        table thead {
            background-color: #17a2b8;
            color: #fff;
        }

        table th, table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table tbody tr:hover {
            background-color: #f1f1f1;
        }

        table th {
            font-size: 18px;
        }

        table td {
            font-size: 16px;
        }

        p {
            text-align: center;
            color: #888;
            font-size: 20px;
        }

        /* Responsive Styling */
        @media (max-width: 768px) {
            .container {
                width: 95%;
                padding: 30px;
            }

            h1 {
                font-size: 28px;
            }

            table th, table td {
                padding: 10px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>

<div class="container">
    <h1>All Customer Details</h1>

    <% if (customerData.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Customer Phone No</th>
                    <th>Product Category</th>
                    <th>Product Name</th>
                </tr>
            </thead>
            <tbody>
                <% customerData.forEach(function(customer) { %>
                    <tr>
                        <td><%= customer.customerPhNo %></td>
                        <td><%= customer.productCategory %></td>
                        <td><%= customer.productName %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No data found.</p>
    <% } %>
</div>

</body>
</html>
