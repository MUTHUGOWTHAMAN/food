<%- include('partials/header') %>

<div class="container register-container">
  <div class="text-center">
    <i class="fas fa-user-plus fa-9x register-icon"></i>

    <h1 class="display-4 mt-4">User Registration</h1>
    <p class="lead">Create your account to get started</p>
    <hr class="my-4">
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0">
        <div class="card-body">

          <!-- Form -->
          <form action="/userregister" method="POST">

            <!-- Email Field -->
            <div class="form-group mb-4">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-4">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <button type="submit" class="btn-custom btn-register">
                <i class="fas fa-user-plus"></i> Register
              </button>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<!-- New Styles -->
<style>
  /* Container Styling */
  .register-container {
    background: linear-gradient(135deg, #f0f0f0, #dbeafe);
    border-radius: 15px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    padding: 80px 40px;
    max-width: 1100px;
    margin: 60px auto;
    transition: all 0.3s ease-in-out;
    text-align: center;
  }

  .register-container:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  /* Icon Styling */
  .register-icon {
    color: #007bff;
    transition: transform 0.3s ease-in-out;
  }

  .register-icon:hover {
    transform: scale(1.1);
  }

  /* Header Styling */
  h1 {
    font-size: 3rem;
    color: #333;
    font-weight: bold;
  }

  p.lead {
    color: #555;
    font-size: 1.4rem;
  }

  hr {
    border: 0;
    height: 2px;
    background: linear-gradient(to right, #007bff, #00c6ff);
    width: 60%;
    margin: 30px auto;
  }

  /* Form Fields */
  .form-group label {
    font-weight: bold;
    color: #333;
  }

  .form-control {
    border-radius: 10px;
    padding: 12px;
    transition: box-shadow 0.3s;
    border: 1px solid #ccc;
  }

  .form-control:focus {
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
    border-color: #007bff;
  }

  /* Button Styling */
  .btn-custom {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 15px 30px;
    font-size: 18px;
    font-weight: bold;
    color: #fff;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border: none;
  }

  .btn-register {
    background: linear-gradient(135deg, #28a745, #34d399);
  }

  .btn-custom:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  }

  .btn-register:hover {
    background: #34d399;
  }

  /* Card Styling */
  .card {
    border-radius: 15px;
    transition: all 0.3s;
  }

  .card:hover {
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .register-container {
      padding: 40px 20px;
    }

    h1 {
      font-size: 2.5rem;
    }

    .btn-custom {
      padding: 12px 25px;
      font-size: 16px;
    }
  }
</style>
